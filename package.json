{
  "name": "lightspot",
  "version": "0.1.0",
  "description": "Multi purpose launcher",
  "main": "./dist/main.js",
  "repository": "https://github.com/D34THWINGS/lightspot.git",
  "author": {
    "name": "Benjamin Delamarre",
    "email": "d34thwings@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "^4.1.3",
    "@angular/common": "^4.1.2",
    "@angular/compiler": "^4.1.2",
    "@angular/core": "^4.1.2",
    "@angular/forms": "^4.1.2",
    "@angular/http": "^4.1.2",
    "@angular/platform-browser": "^4.1.2",
    "@angular/platform-browser-dynamic": "^4.1.2",
    "apple-icns": "^0.1.0",
    "bmp-js": "^0.0.3",
    "core-js": "^2.4.1",
    "electron": "^1.8.4",
    "fuzzy": "^0.1.3",
    "rxjs": "^5.4.0",
    "zone.js": "^0.8.10"
  },
  "devDependencies": {
    "@types/electron": "^1.4.37",
    "@types/node": "8.0.9",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.3",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.1",
    "electron-builder": "^20.8.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "nodemon": "^1.17.3",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.17.0",
    "tslint": "^5.2.0",
    "typescript": "^2.3.2",
    "webpack": "^2.5.1",
    "webpack-dev-server": "^2.4.5"
  },
  "scripts": {
    "dist": "yarn build:webpack && yarn build:electron",
    "build:electron": "build",
    "build:webpack": "rm -rf ./dist && webpack --progress -p --optimize-minimize --env.production",
    "watch": "webpack-dev-server --hot --inline",
    "start": "nodemon --exec electron ./src/main.js"
  },
  "build": {
    "productName": "LightSpot",
    "appId": "com.LightSpot",
    "files": [
      "dist/"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  }
}
